# ðŸ”® MON Fortune Oracle Configuration
# Supports both testnet and mainnet
# Moltiverse Hackathon - Agent + Token Track

# ============================================
# REQUIRED: Oracle Private Key
# This key controls both testnet and mainnet oracles
# Generate with: cast wallet new (Foundry)
# Or use existing wallet private key
# ============================================
ORACLE_PRIVATE_KEY=0x...

# ============================================
# Oracle Addresses (derived from private key)
# These are the addresses users send MON to
# Run scripts/setup.sh to auto-generate
# ============================================
TESTNET_ORACLE_ADDRESS=0x...
MAINNET_ORACLE_ADDRESS=0x...

# ============================================
# FORTUNE Token Addresses (from nad.fun deployment)
# Deploy with: POST /token/deploy (requires ADMIN_API_KEY)
# ============================================
TESTNET_FORTUNE_TOKEN_ADDRESS=0x...
MAINNET_FORTUNE_TOKEN_ADDRESS=0x...

# ============================================
# RPC URLs (defaults provided, override if needed)
# ============================================
TESTNET_RPC=https://testnet-rpc.monad.xyz
MAINNET_RPC=https://rpc.monad.xyz

# ============================================
# nad.fun API Configuration
# ============================================
NADFUN_TESTNET_API=https://dev-api.nad.fun
NADFUN_MAINNET_API=https://api.nadapp.net

# ============================================
# Transaction Settings
# ============================================

# Minimum MON required to get a fortune (in wei)
# Default: 0.001 MON = 1000000000000000
MIN_MON_AMOUNT=1000000000000000

# Maximum return amount to prevent bankruptcy (in wei)
# Default: 10 MON = 10000000000000000000
MAX_RETURN=10000000000000000000

# ============================================
# Server Settings
# ============================================

# Port to run the API server
PORT=3000

# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX=100

# Admin API key for sensitive operations (token deployment)
ADMIN_API_KEY=your-secure-random-key-here

# ============================================
# Optional: For Production
# ============================================

# Custom domain for callback URLs
# API_DOMAIN=https://api.mon-fortune.xyz

# Redis URL for production (optional, uses memory by default)
# REDIS_URL=redis://localhost:6379

# Agent Faucet (for testnet funding)
AGENT_FAUCET_URL=https://agents.devnads.com/v1/faucet